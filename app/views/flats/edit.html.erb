<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <h1 class="text-center">Edit infos about <%=@flat.name%>:</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-6 m-auto">
      <div class="text-center">
        <%=simple_form_for(@flat) do |f|%>
          <%=f.input :name%>
          <%=f.input :address%>
          <%=f.input :host%>
          <%=f.input :description%>
          <%=f.input :picture_url%>
          <%=f.input :number_of_guests%>
          <%=f.input :price_per_night%>
          <%=f.submit%>
        <%end%>
      </div>
    </div>
  </div>
</div>
